#:import Factory kivy.factory.Factory

<Screen>:
    on_enter: root.manager.loading_popup.dismiss()
    on_pre_leave: root.manager.loading_popup.open()

<LoadingPopup@Popup>:
    title: "Loading"
    auto_dismiss: False
    size_hint: 0.5, 0.2
    BoxLayout:
        Label:
            text: "Loading..."

<PaperPopup@Popup>:
    title: "Configure the machine to:"
    size_hint: 0.5, 0.7
    on_open:
        paper.ids.input_paper.recycle_view_input.data = paper.input_data()
        paper.ids.output_paper.recycle_view_output.data = paper.output_data()
    BoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(20)
        Paper:
            id: paper
        Button:
            size_hint: 0.1, 0.1
            text: "Close"
            pos_hint: {"center_x": 0.5}
            on_release:
                root.dismiss()

<CheckPaperButton@ButtonBehavior+Image>:
    source: "misc/paper.png"
    on_release: app.root.paper_popup.open()
    PaperLabel:
        text: "Paper"
        text_size: root.width, None

<CheckPaper@AnchorLayout>:
    anchor_x: "right"
    anchor_y: "bottom"
    padding: dp(10)
    RelativeLayout:
        size_hint: 0.1, 0.1
        CheckPaperButton:

<UIManager>:
    loading_popup: Factory.LoadingPopup()
    paper_popup: Factory.PaperPopup()
    canvas:
        Color:
            rgba: 111 / 255, 175 / 255 , 150 / 255, 1
        Rectangle:
            size: root.size
            pos: root.pos
    MainScreen:
    GameScreen:
    SettingsScreen:
    PlugboardScreen:
    RotorScreen:
