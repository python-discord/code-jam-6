<PopupLabel@Label>:
    size_hint_y: None
    pos_hint: {"top": 0.7}
    text_size: root.width, None
    size: self.texture_size
    halign: "center"
    valign: "top"

<Wire@Widget>:
    points: []
    plugs: ""
    color: [0, 0, 0]
    canvas:
        Color:
            rgb: root.color or [0, 0, 0]
            a: 0.5
        Line:
            points: root.points
            width: 5

<PlugResume@Popup>:
    size_hint: 0.5, 0.5
    title: "Plugs resume"
    BoxLayout:
        spacing: dp(10)
        orientation: "vertical"
        GridLayout:
            rows: 2
            BoxLayout:
                size_hint_y: 0.5
                PopupLabel:
                    text: "Pair of plugs:"
                PopupLabel:
                    text: "Number of plugs in screen:"
            BoxLayout:
                ScrollView:
                    PopupLabel:
                        text: "\n".join(app.root.get_screen("plugboard_screen").wires)
                StackLayout:
                    PopupLabel:
                        text: str(app.root.get_screen("plugboard_screen").plugs_in_screen)
        BoxLayout:
            size_hint: 0.3, 0.2
            pos_hint: {"center_x": 0.5}
            Button:
                text: "Close"
                on_release: root.dismiss()

<Plug@Image>:
    app: app
    size_hint: 0.1, 0.1
    source: "misc/plug.png"

<PlugHole@ButtonBehavior+Image>:
    source: "misc/ports.png"
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    on_center: app.root.get_screen("plugboard_screen").on_plughole_recenter(*args)
    on_release: app.root.get_screen("plugboard_screen").handle_plug_release(*args)

