<PlugboardScreen>
    name: "plugboard_screen"
    FloatLayout:
        id: floating_widgets
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            BoxLayout:
                size_hint_y: 0.1
                Button:
                    on_press: app.root.get_screen("game_screen").button_press_swoosh()
                    size_hint_x: 0.5
                    text: "Go back!"
                    on_release: root.manager.current = "game_screen"
                Button:
                    text: "Plug resume"
                    on_release: Factory.PlugResume().open()
                Button:
                    id: remove_plug
                    text: "Remove the last pair of plugs"
                    disabled: True
                    on_release: root.remove_grouped_plugs()
        AnchorLayout:
            padding: dp(30)
            PlugBoard:
                size_hint: 0.7, 0.7
                id: plug_board
        AnchorLayout:
            anchor_y: "bottom"
            BoxLayout:
                size_hint: 0.1, 0.2
                Label:
                    text: "Click in a plughole to add a plug there"
        CheckPaper:

