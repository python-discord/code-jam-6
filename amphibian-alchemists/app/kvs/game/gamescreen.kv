<GameTitlePopup@Popup>:
    title: "There is already a default"
    size_hint: 0.5, 0.5
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: game_title_input
            hint_text: "Best game ever..."
            size_hint_x: 0.7
        Button:
            text: "Save game title"
            on_release:
                app.root.get_screen("game_screen").change_game_title(self, game_title_input.text)
                root.dismiss()
        Button:
            text: "Cancel"
            on_release: root.dismiss()

<GameMenuPopup@Popup>:
    title: "Select..."
    size_hint: 0.5, 0.5
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Give this current game a title"
            on_release: Factory.GameTitlePopup().open()
        Button:
            text: "Save a copy of current progress"
            on_release:
                app.root.get_screen("game_screen").save_game()
                root.dismiss()
        Button:
            text: "Load old copy (WARNING: Overrides current progress!)"
            on_release:
                app.root.get_screen("game_screen").load_old_game()
                root.dismiss()
        Button:
            text: "Close"
            on_release:
                root.dismiss()
        Button:
            text: "Exit"
            on_release:
                app.root.current = "main_screen"
                root.dismiss()

<GameScreen>:
    name: "game_screen"
    AnchorLayout:
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.75, 1
            AnchorLayout:
                size_hint: 1, 0.6
                RotorDisplay:
                Button:
                    background_color: 0, 0, 0, 0
                    on_release: root.manager.current = "rotor_screen"
            EnigmaKeyboard:
                id: enigma_keyboard
            Button:
                text: "plugboard"
                size_hint: 1, 0.1
                on_release: root.manager.current = "plugboard_screen"
    AnchorLayout:
        anchor_y : "top"
        anchor_x : "left"
        Button:
            text: "Menu"
            size_hint: 0.1, 0.1
            on_release: Factory.GameMenuPopup().open()
    CheckPaper:
