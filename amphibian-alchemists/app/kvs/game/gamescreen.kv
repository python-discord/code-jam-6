<GameTitlePopup@Popup>:
    title: "There is already a default"
    size_hint: 0.5, 0.5
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: game_title_input
            size_hint_x: 0.7
        Button:
            text: "Save game title"
            on_release:
                app.root.get_screen("game_screen").change_game_title(self, game_title_input.text)
                root.dismiss()
        Button:
            text: "Cancel"
            on_release: root.dismiss()

<GameMenuPopup@Popup>:
    title: "Select..."
    size_hint: 0.5, 0.5
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Give this current game a title"
            on_release: Factory.GameTitlePopup().open()
        Button:
            text: "Save a copy of current progress"
            on_release:
                app.root.get_screen("game_screen").save_game()
                root.dismiss()
        Button:
            text: "Load old copy (WARNING: Overrides current progress!)"
            on_release:
                app.root.get_screen("game_screen").load_old_game()
                root.dismiss()
        Button:
            text: "Exit"
            on_release:
                app.root.current = "main_screen"
                root.dismiss()

<GameScreen>:
    name: "game_screen"
    AnchorLayout:
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.75, 0.7
            Button:
                size_hint_y: 0.2
                text: "Rotors"
                on_release: root.manager.current = "rotor"
            EnigmaKeyboard:
                id: enigma_keyboard
    AnchorLayout:
        anchor_x : "left"
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Menu"
                size_hint: 0.1, 0.1
                on_release: Factory.GameMenuPopup().open()
            Button:
                text: "paper"
                size_hint: 0.1, 1
                on_release: root.manager.current = "paper"
    AnchorLayout:
        anchor_x : "right"
        Button:
            text: "Output paper"
            size_hint: 0.1, 1
            on_release: root.manager.current = "paper"
    AnchorLayout:
        anchor_y: "bottom"
        Button:
            text: "plugboard"
            size_hint: 0.75, 0.15
            on_release: root.manager.current = "plugboard"
