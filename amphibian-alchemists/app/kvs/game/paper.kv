<PaperLabel@Label>:
    color: 0, 0, 0, 1
    text_size: root.width, None
    size: self.texture_size
    halign: "center"

<PaperBackground@Image>:
    source: "misc/paper.png"

<InputPaper@AnchorLayout>:
    size_hint: 0.5, 1
    recycle_view_input: recycle_view_input
    PaperBackground:
    RecycleView:
        id: recycle_view_input
        size_hint: 0.6, 0.9
        viewclass: "PaperLabel"
        data: []
        RecycleBoxLayout:
            default_size: None, dp(25)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"

<OutputPaper@AnchorLayout>:
    size_hint: 0.5, 1
    recycle_view_output: recycle_view_output
    PaperBackground:
    RecycleView:
        id: recycle_view_output
        size_hint: 0.6, 0.9
        viewclass: "PaperLabel"
        data: []
        RecycleBoxLayout:
            default_size: None, dp(25)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"

<Paper>:
    name: "paper_screen"
    BoxLayout:
        InputPaper:
            id: input_paper
        OutputPaper:
            id: output_paper
