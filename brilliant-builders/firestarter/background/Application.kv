#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<Dino1>:
    canvas:
        Rectangle:
            source: "Picture/dino.png"
            size: 500, 500
            pos: self.pos
<Dino>:
    canvas:
        Rectangle:
            source: "Picture/dino.png"
            size: 300, 300
            pos: self.pos

<MyGame>:
    dino: dino
    dino1: dino1
    ScreenManager:
        size: root.size
        transition: FadeTransition()

        Screen:
            name: "start"
            FloatLayout:
                Image:
                    size_hint: 1.2, 1.2
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    keep_ratio: False
                    allow_stretch: True
                    canvas.before:
                        Color:
                            rgb: 0,0,0
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    source: 'Picture/ui_background_half.png'
            Button:
                text: "PLAY!"
                color: 0, 0, 0, 1
                size_hint: 0.3, 0.1
                pos_hint: {'center_x':0.5, 'center_y':0.6}
                font_size: 50
                on_release: self.parent.parent.current = "game"
                on_press: self.background_color = 0, 0.5, 0, 1
                background_normal: 'Picture/ui_box_medium.png'
            Button:
                text: "OPTION!"
                color: 0, 0, 0, 1
                size_hint: 0.3, 0.1
                pos_hint: {'center_x':.5, 'center_y':.48}
                font_size: 50
                on_release: self.parent.parent.current = "game"
                on_press: self.background_color = 0, 0.5, 0, 1
                background_normal: 'Picture/ui_box_medium.png'

        Screen:
            name: "game"
            FloatLayout:
                Image:
                    size_hint: 1, 1
                    keep_ratio: False
                    allow_stretch: True
                    canvas.before:
                        Color:
                            rgb: 1,1,1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    source: 'Picture/background.png'
                Image:
                    source: 'Picture/mountains_2.png'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                    keep_ratio: False
                    allow_stretch: True
                    size_hint: 1, 0.7
                Dino1:
                    id: dino1
                    pos: -120, -20
                Dino:
                    id: dino
                    pos: -80 , -10
                Image:
                    size_hint: 1.2, 0.6
                    pos_hint: {'x': 0, 'y': 0}
                    keep_ratio: False
                    allow_stretch: True
                    source: "Picture/forest.png"
                Image:
                    size_hint: 1, 1
                    source: "Picture/sun.png"
                    allow_stretch: True
                    keep_ratio: False
                Image:
                    size_hint: 0.5, 0.5
                    pos_hint: {'center_x': 0.2, 'center_y': 0.8}
                    keep_ratio: False
                    allow_stretch: True
                    source: "Picture/clouds.png"
                Image:
                    size_hint: 0.5, 0.5
                    pos_hint: {'center_x': 0.75, 'center_y': 0.8}
                    keep_ratio: False
                    allow_stretch: True
                    source: "Picture/clouds.png"
                Image:
                    source: "Picture/grass_platform.png"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                    keep_ratio: False
                    allow_stretch: True
                    size_hint: 1, 0.6
                Image:
                    source: "Picture/cloud_platform_2.png"
                    keep_ratio: True
                    allow_stretch: True
                    pos_hint: {'center_x': 0.5, 'top': 0.8}
